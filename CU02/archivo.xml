<ifml:ViewContainer xmlns:ifml="http://www.omg.org/spec/IFML/20131001"
                     xmlns:ifmlc="http://www.omg.org/spec/IFML/20131001/IFMLCore"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://www.omg.org/spec/IFML/20131001 
                                         http://www.omg.org/spec/IFML/20131001/IFMLCore.xsd">
    
    <!-- Página Inicial -->
    <ifml:ViewContainer id="homePage" name="Inicio">
        <ifml:DisplayContainer>
            <ifml:Content>
                <ifml:DisplayElement id="welcomeMessage" name="Bienvenido">
                    <ifml:Text>Bienvenido a la aplicación de convocatorias. Selecciona 'Consultar Convocatorias' para ver la lista.</ifml:Text>
                </ifml:DisplayElement>
            </ifml:Content>
        </ifml:DisplayContainer>
        <ifml:InteractionFlow id="navigateToConsultations" name="Ir a Consultas">
            <ifml:Event event="Click">
                <ifml:Target target="consultationsPage"/>
            </ifml:Event>
        </ifml:InteractionFlow>
    </ifml:ViewContainer>

    <!-- Página de Convocatorias -->
    <ifml:ViewContainer id="consultationsPage" name="Consultar Convocatorias">
        <ifml:DisplayContainer>
            <ifml:Content>
                <!-- Filtros de Búsqueda -->
                <ifml:DisplayElement id="filters" name="Filtros de Búsqueda">
                    <ifml:Form id="searchFilters" name="Filtros">
                        <ifml:Field id="dateFilter" name="Fecha" type="Date"/>
                        <ifml:Field id="subjectFilter" name="Materia" type="Text"/>
                        <ifml:Field id="positionTypeFilter" name="Tipo de Cargo" type="Text"/>
                        <ifml:Action id="applyFilters" name="Aplicar Filtros" type="Submit"/>
                    </ifml:Form>
                </ifml:DisplayElement>
                
                <!-- Lista de Convocatorias -->
                <ifml:DisplayElement id="convocationList" name="Lista de Convocatorias">
                    <ifml:List id="convocations" name="Convocatorias">
                        <!-- Elemento de Convocatoria -->
                        <ifml:DisplayElement id="convocationItem" name="Convocatoria">
                            <ifml:Text>Nombre de la Convocatoria</ifml:Text>
                            <ifml:Action id="viewDetails" name="Ver Detalles" type="Navigate"/>
                        </ifml:DisplayElement>
                    </ifml:List>
                </ifml:DisplayElement>

                <!-- Mensaje de No Hay Convocatorias -->
                <ifml:DisplayElement id="noConvocationsMessage" name="No Hay Convocatorias">
                    <ifml:Text>No hay convocatorias disponibles en este momento.</ifml:Text>
                </ifml:DisplayElement>
            </ifml:Content>
        </ifml:DisplayContainer>

        <!-- Página de Detalles de Convocatoria -->
        <ifml:ViewContainer id="detailsPage" name="Detalles de Convocatoria">
            <ifml:DisplayContainer>
                <ifml:Content>
                    <ifml:DisplayElement id="convocationDetails" name="Detalles">
                        <ifml:Text>Detalles de la Convocatoria seleccionada:</ifml:Text>
                        <ifml:Text>Requisitos:</ifml:Text>
                        <ifml:Text>Fecha de Inicio:</ifml:Text>
                        <ifml:Text>Fecha de Cierre:</ifml:Text>
                        <ifml:Text>Tipo de Cargo:</ifml:Text>
                        <ifml:Text>Dedicación:</ifml:Text>
                        <ifml:Text>Fecha de Sorteos de Temas:</ifml:Text>
                        <ifml:Text>Fecha de Entrevista:</ifml:Text>
                    </ifml:DisplayElement>
                    <ifml:Action id="closeDetails" name="Cerrar Detalles" type="Navigate"/>
                </ifml:Content>
            </ifml:DisplayContainer>
            <ifml:InteractionFlow id="navigateToConsultationsFromDetails" name="Regresar a Convocatorias">
                <ifml:Event event="Click">
                    <ifml:Target target="consultationsPage"/>
                </ifml:Event>
            </ifml:InteractionFlow>
        </ifml:ViewContainer>
    </ifml:ViewContainer>

</ifml:ViewContainer>

