<?xml version="1.0" encoding="UTF-8"?>
<ifml:InteractionFlowModel xmlns:ifml="http://www.omg.org/spec/IFML/20131001" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <!-- Definición de la vista principal -->
  <ifml:ViewComponent id="viewMainPage" name="Página Principal">
    <ifml:ViewContainer id="mainPage" name="Página Principal">
      <ifml:Action name="Consultar Convocatorias" id="actionConsultCall">
        <ifml:Event name="Click en Consultar Convocatorias" />
        <ifml:Destination id="viewCallsList" name="Lista de Convocatorias" />
      </ifml:Action>
    </ifml:ViewContainer>
  </ifml:ViewComponent>
  
  <!-- Definición de la vista de lista de convocatorias -->
  <ifml:ViewComponent id="viewCallsList" name="Lista de Convocatorias">
    <ifml:ViewContainer id="callsListContainer" name="Contenedor de Lista de Convocatorias">
      <ifml:Event name="Mostrar Lista de Convocatorias" />
      <ifml:DisplayElement id="listCalls" name="Lista de Convocatorias" />
      <ifml:Action name="Filtrar Convocatorias" id="actionFilterCalls">
        <ifml:Event name="Aplicar Filtros" />
      </ifml:Action>
    </ifml:ViewContainer>
  </ifml:ViewComponent>
  
  <!-- Definición de la vista de mensaje sin convocatorias -->
  <ifml:ViewComponent id="viewNoCalls" name="Sin Convocatorias">
    <ifml:ViewContainer id="noCallsContainer" name="Contenedor de Sin Convocatorias">
      <ifml:Event name="Mostrar Mensaje Sin Convocatorias" />
      <ifml:DisplayElement id="messageNoCalls" name="Mensaje Sin Convocatorias" />
    </ifml:ViewContainer>
  </ifml:ViewComponent>
  
  <!-- Definición de las transiciones entre vistas -->
  <ifml:NavigationFlow from="viewMainPage" to="viewCallsList" id="flowToCallsList">
    <ifml:Condition expression="User selects 'Consultar Convocatorias'" />
  </ifml:NavigationFlow>
  
  <ifml:NavigationFlow from="viewCallsList" to="viewNoCalls" id="flowNoCalls">
    <ifml:Condition expression="No calls available" />
  </ifml:NavigationFlow>
  
  <ifml:NavigationFlow from="viewCallsList" to="viewCallsList" id="flowFilterCalls">
    <ifml:Condition expression="Filters applied" />
  </ifml:NavigationFlow>
  
</ifml:InteractionFlowModel>
