<IFML>
    <ViewContainer name="ConvocatoriasView">
        <ViewComponent name="ConvocatoriasTable">
            <DataBinding data="Convocatorias" />
            <Event>
                <Action name="SelectConvocatorias" />
            </Event>
        </ViewComponent>
        <ViewComponent name="AddConvocatoriaButton">
            <Event>
                <Action name="AddConvocatoria" />
            </Event>
        </ViewComponent>
    </ViewContainer>

    <ViewContainer name="AddConvocatoriaView">
        <ViewComponent name="CargoSelection">
            <DataBinding data="CargosVacantes" />
            <Event>
                <Action name="SelectCargo" />
            </Event>
        </ViewComponent>
        <ViewComponent name="FechaInicioInput">
            <DataBinding data="fechaInicio" />
            <Event>
                <Action name="SetFechaInicio" />
            </Event>
        </ViewComponent>
        <ViewComponent name="FechaCierreInput">
            <DataBinding data="fechaCierre" />
            <Event>
                <Action name="SetFechaCierre" />
            </Event>
        </ViewComponent>
        <ViewComponent name="DocumentacionInput">
            <DataBinding data="documentoURL" />
            <Event>
                <Action name="UploadDocumentacion" />
            </Event>
        </ViewComponent>
        <ViewComponent name="DocentesSelection">
            <DataBinding data="Docentes" />
            <Event>
                <Action name="SelectDocente" />
            </Event>
        </ViewComponent>
        <ViewComponent name="GuardarButton">
            <Event>
                <Action name="GuardarConvocatoria" />
            </Event>
        </ViewComponent>
    </ViewContainer>

    <EventFlow name="RegistrarConvocatoriaFlow">
        <Source>
            <ViewComponent name="AddConvocatoriaButton" />
        </Source>
        <Target>
            <ViewContainer name="AddConvocatoriaView" />
        </Target>
    </EventFlow>

    <EventFlow name="GuardarConvocatoriaFlow">
        <Source>
            <ViewComponent name="GuardarButton" />
        </Source>
        <Target>
            <ViewContainer name="ConvocatoriasView" />
        </Target>
    </EventFlow>
</IFML>
